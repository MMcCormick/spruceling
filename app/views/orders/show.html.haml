#order_show
  %p#notice= notice

  %h1= "Order ##{@order.id}"

  %div= "Order placed on #{@order.created_at.strftime('%B %d, %Y at %I:%M %p')}"
  %div= "Total: $#{@order.price_total}"

  - @order.boxes.each do |box|
    %div= render "boxes/itemized", :box => box

  %br

  = link_to 'Back', orders_path
