.photo.cover-image{:style => "background-image: url('#{user_avatar_path(@user, :width => 400, :height => 400, :crop => :limit, :gravity => :face)}')"}

%h4.username= @user.name
.city= "#{@user.address["city"]}, #{@user.address["state"]}" if @user.address && @user.address["city"] && @user.address["state"]