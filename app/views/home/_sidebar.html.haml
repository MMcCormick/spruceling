.section
  .head Gender
  .content
    .item.radio
      = radio_button_tag :gender, "", :checked => 'checked'
      = label_tag :gender, 'Both', :value => ""
    .item.radio
      = radio_button_tag :gender, "m", :checked => ''
      = label_tag :gender, 'Boy', :value => "m"
    .item.radio
      = radio_button_tag :gender, "f", :checked => ''
      = label_tag :gender, 'Girl', :value => "f"

.section
  .head Size
  .content
    = select_tag :size, options_for_select(Item.all_sizes), :prompt => "Select a size"