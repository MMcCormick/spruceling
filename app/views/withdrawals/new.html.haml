- content_for :left_sidebar do
  = render :partial => 'users/edit_sidebar', :layout => 'layouts/left_sidebar'

#new_withdrawal
  .row.section
    .head
      %h3= "Current Balance: #{user_balance(@withdrawal.user)}"
    .content
      %a#toggle_withdraw{:href => "#"} Withdraw Balance
      #withdraw.hide
        - if @withdrawal.user.balance < 10
          %div You must have at least $10 in your account to withdraw.
        - elsif @withdrawal.user.address.blank?
          %div Please update your shipping address before proceeding
        - else
          %div= render "form"