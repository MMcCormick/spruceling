%h1 Listing items

-Item.all_sizes.each do |size|
  -["m", "f"].each do |gender|
    -unless @items.where(:size => size, :gender => gender).empty?
      %h3= "#{size} #{gender}"
      %table
        %tr
          %th
          %th Brand
          %th Box
          %th Type
          %th
          %th
          %th

        - @items.where(:size => size, :gender => gender).each do |item|
          %tr
            %td
            %td= item.brand
            %td= item.box
            %td= item.type
            %td= link_to 'Show', item
            %td= link_to 'Edit', edit_item_path(item)
            %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }

      %br

= link_to 'New Item', new_item_path
