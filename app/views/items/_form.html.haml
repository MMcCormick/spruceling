= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :size
    = f.text_field :size
  .field
    = f.label :brand
    = f.text_field :brand
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :box
    = f.text_field :box
  .field
    = f.label :type
    = f.text_field :type
  .actions
    = f.submit 'Save'
