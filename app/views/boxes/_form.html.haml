= form_for @box do |f|
  - if @box.errors.any?
    #error_explanation
      %h2= "#{pluralize(@box.errors.count, "error")} prohibited this box from being saved:"
      %ul
        - @box.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :gender
    = f.radio_button :gender, "m"
    = f.label :gender, 'Boy', :value => "m"
    = f.radio_button :gender, "f"
    = f.label :gender, 'Girl', :value => "f"
  .field
    = f.label :size
    = f.select :size, Item.all_sizes, :prompt => "Select a size"
  .field
    = f.attachinary_file_field :photos
  .actions
    = f.submit 'Save'
